<body>
    <div class="profile-container">
        <div class="user-icon" onclick="toggleProfile()">
            <img src="https://i.imgur.com/6VBx3io.png" alt="User">
        </div>
        <div class="profile-modal" id="profileModal">
            <div class="user-info">
                <h3>John Doe</h3>
                <p>john.doe@example.com</p>
            </div>
            <div class="btn-container">
                <button class="btn logout" onclick="logout()">Logout</button>
                <button class="btn delete" onclick="deleteAccount()">Delete</button>
            </div>
        </div>
    </div>
    <script>
        function toggleProfile() {
            document.getElementById("profileModal").classList.toggle("show");
        }
        function logout() {
            alert("Logged out successfully!");
            toggleProfile();
        }
        function deleteAccount() {
            if (confirm("Are you sure you want to delete your account?")) {
                alert("Account deleted.");
                toggleProfile();
            }
        }
        window.onclick = function(event) {
            if (!event.target.closest(".profile-container")) {
                document.getElementById("profileModal").classList.remove("show");
            }
        }
    </script>
</body>
